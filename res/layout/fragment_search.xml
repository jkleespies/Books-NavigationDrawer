<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/searchActivity_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@drawable/search"
        android:width="150dp" />

    <ImageButton
        android:id="@+id/searchActivity_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchActivity_search"
        android:layout_below="@+id/searchActivity_search"
        android:src="@drawable/scan"
        android:layout_marginTop="140dp"
        android:width="150dp" />

    <EditText
        android:id="@+id/searchActivity_input_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchActivity_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/searchKeyword"
        android:width="300dp" >

        <requestFocus />
    </EditText>

</RelativeLayout>